@model WebApp.Areas.Admin.Controllers.ProfileController.UserProfileViewModel
@{
    ViewData["Title"] = "Quản lý Profile";
}

<div class="container mt-4">
    <h2 class="mb-4">👤 Quản lý Profile</h2>

    <!-- Thông báo -->
    @if (TempData["CreateProfileMessage"] != null)
    {
        <div class="alert alert-info">@TempData["CreateProfileMessage"]</div>
    }
    @if (TempData["DeleteProfileMessage"] != null)
    {
        <div class="alert alert-warning">@TempData["DeleteProfileMessage"]</div>
    }
    @if (TempData["AssignProfileMessage"] != null)
    {
        <div class="alert alert-success">@TempData["AssignProfileMessage"]</div>
    }
    @if (TempData["RevokeProfileMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["RevokeProfileMessage"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <!-- Danh sách profile -->
    <div class="card shadow">
        <div class="card-header bg-secondary text-white">
            <strong>📜 Danh sách Profile hiện có</strong>
        </div>
        <div class="card-body">
            <div style="max-height: 300px; overflow-y: auto;">
                <table class="table table-striped table-bordered mb-0">
                    <thead>
                        <tr>
                            <th>Tên Profile</th>
                            <th>FAILED_LOGIN_ATTEMPTS</th>
                            <th>PASSWORD_LIFE_TIME</th>
                            <th>PASSWORD_GRACE_TIME</th>
                            <th>INACTIVE_ACCOUNT_TIME</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Profiles.Any())
                        {
                            foreach (var profile in Model.Profiles)
                            {
                                <tr>
                                    <td>@profile.ProfileName</td>
                                    <td>@profile.FailedLogin</td>
                                    <td>@profile.LifeTime</td>
                                    <td>@profile.GraceTime</td>
                                    <td>@profile.LockTime</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">Không có profile nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>    
            </div>
        </div>
    </div>
    <!-- Danh sách user và profile -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-dark text-white">
            <strong>👥 Danh sách User và Profile</strong>
        </div>
        <div class="card-body p-0">
            <div style="max-height: 300px; overflow-y: auto;">
                <!-- 👈 thanh cuộn -->
                <table class="table table-striped table-bordered mb-0">
                    <thead class="table-secondary">
                        <tr>
                            <th>Tên User</th>
                            <th>Profile</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users != null && Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Username</td>
                                    <td>@user.Profile</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">Không có user nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <!-- Tạo profile -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <strong>➕ Tạo Profile mới</strong>
        </div>
        <div class="card-body">
            <form asp-action="CreateProfile" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-2">
                            <label for="ProfileName">Tên Profile</label>
                            <input type="text" name="ProfileName" class="form-control" placeholder="Nhập tên profile" required />
                        </div>

                        <div class="form-group mb-2">
                            <label for="FailedLogin">FAILED_LOGIN_ATTEMPTS</label>
                            <input type="text" name="FailedLogin" class="form-control" value="UNLIMITED" />
                        </div>

                        <div class="form-group mb-2">
                            <label for="LifeTime">PASSWORD_LIFE_TIME</label>
                            <input type="text" name="LifeTime" class="form-control" value="UNLIMITED" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-2">
                            <label for="GraceTime">PASSWORD_GRACE_TIME</label>
                            <input type="text" name="GraceTime" class="form-control" value="UNLIMITED" />
                        </div>

                        <div class="form-group mb-2">
                            <label for="LockTime">INACTIVE_ACCOUNT_TIME</label>
                            <input type="text" name="LockTime" class="form-control" value="UNLIMITED" />
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Tạo Profile</button>
            </form>
        </div>
    </div>


    <!-- Xóa profile -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-danger text-white">
            <strong>🗑️ Xóa Profile</strong>
        </div>
        <div class="card-body">
            <form asp-action="DeleteProfile" method="post">
                <div class="form-group">
                    <label for="profileName">Chọn Profile</label>
                    <select name="profileName" class="form-control" required>
                        <option value="">-- Chọn Profile --</option>
                        @foreach (var p in Model.Profiles)
                        {
                            <option value="@p.ProfileName">@p.ProfileName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-danger mt-2">Xóa Profile</button>
            </form>
        </div>
    </div>

    <!-- Gán profile cho user -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-success text-white">
            <strong>🔐 Gán Profile cho User</strong>
        </div>
        <div class="card-body">
            <form asp-action="AssignProfile" method="post">
                <div class="form-group">
                    <label for="userName">Chọn User</label>
                    <select name="userName" class="form-control" required>
                        <option value="">-- Chọn User --</option>
                        @foreach (var u in Model.Users)
                        {
                            <option value="@u.Username">@u.Username</option>
                        }
                    </select>
                </div>
                <div class="form-group mt-2">
                    <label for="profileName">Chọn Profile</label>
                    <select name="profileName" class="form-control" required>
                        <option value="">-- Chọn Profile --</option>
                        @foreach (var p in Model.Profiles)
                        {
                            <option value="@p.ProfileName">@p.ProfileName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-success mt-2">Gán Profile</button>
            </form>
        </div>
    </div>

    
</div>