@{
    ViewData["Title"] = "Thông tin cá nhân";
    var username = ViewData["Username"]?.ToString();
    var roles = ViewData["Roles"]?.ToString();
    var sessionId = ViewData["SessionId"]?.ToString();
    var loginTime = ViewData["LoginTime"]?.ToString();
}

<style>
    .profile-page {
        padding: 2rem;
        background: linear-gradient(135deg, rgba(59,130,246,0.05) 0%, rgba(139,92,246,0.05) 100%);
        min-height: 100vh;
    }

    .profile-header {
        background: linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(139,92,246,0.1) 100%);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        text-align: center;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 3rem;
        margin: 0 auto 1.5rem;
        border: 5px solid #ffffff;
        box-shadow: 0 8px 32px rgba(79, 70, 229, 0.3);
        text-transform: uppercase;
    }

    .profile-name {
        font-size: 2rem;
        font-weight: 700;
        color: #1e40af;
        margin-bottom: 0.5rem;
    }

    .profile-role {
        font-size: 1.1rem;
        color: #6b7280;
        margin-bottom: 0;
    }

    .info-card {
        background: linear-gradient(135deg, 
            rgba(255,255,255,0.95) 0%, 
            rgba(249,250,251,0.95) 50%, 
            rgba(255,255,255,0.95) 100%);
        border: 1px solid rgba(59,130,246,0.2);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 6px 25px rgba(59,130,246,0.1);
        transition: all 0.3s ease;
    }



    .info-card-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #1e40af;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid rgba(59,130,246,0.1);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(59,130,246,0.05);
    }

    .info-item:last-child {
        border-bottom: none;
    }

    .info-label {
        font-weight: 600;
        color: #374151;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-value {
        font-weight: 500;
        color: #1f2937;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        padding: 0.75rem 1.25rem;
        border-radius: 10px;
        border: 1px solid rgba(59,130,246,0.1);
        min-width: 200px;
        text-align: right;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .session-id {
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        word-break: break-all;
        background: linear-gradient(135deg, #1e293b 0%, #374151 100%);
        color: white;
        padding: 0.75rem 1.25rem;
        border-radius: 10px;
    }



    @@media (max-width: 768px) {
        .profile-page {
            padding: 1rem;
        }

        .profile-header {
            padding: 1.5rem;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            font-size: 2.5rem;
        }

        .profile-name {
            font-size: 1.7rem;
        }

        .info-card {
            padding: 1.5rem;
        }

        .info-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .info-value {
            min-width: unset;
            width: 100%;
            text-align: left;
        }


    }
</style>

<div class="profile-page">
    <div class="profile-header">
        <div class="profile-avatar">
            @if (!string.IsNullOrEmpty(username))
            {
                @username.Substring(0, Math.Min(2, username.Length))
            }
        </div>
        <h1 class="profile-name">@username</h1>
        <p class="profile-role">@roles</p>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="info-card">
                <h3 class="info-card-title">
                    <i class="bi bi-person-badge"></i>
                    Thông tin tài khoản
                </h3>

                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-person"></i>
                        Tên đăng nhập
                    </div>
                    <div class="info-value">@username</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-shield-check"></i>
                        Phân quyền
                    </div>
                    <div class="info-value">@roles</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-activity"></i>
                        Trạng thái
                    </div>
                    <div class="info-value">
                        <span class="status-badge">
                            <i class="bi bi-check-circle"></i>
                            Đang hoạt động
                        </span>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-clock"></i>
                        Thời gian đăng nhập
                    </div>
                    <div class="info-value">@loginTime</div>
                </div>
            </div>

            <div class="info-card">
                <h3 class="info-card-title">
                    <i class="bi bi-server"></i>
                    Thông tin phiên làm việc
                </h3>

                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-key"></i>
                        ID phiên làm việc
                    </div>
                    <div class="info-value">
                        <div class="session-id">
                            @(sessionId ?? "Không có thông tin")
                        </div>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-globe"></i>
                        Loại kết nối
                    </div>
                    <div class="info-value">Admin Dashboard</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="bi bi-shield-lock"></i>
                        Bảo mật
                    </div>
                    <div class="info-value">
                        <span class="status-badge">
                            <i class="bi bi-check2-circle"></i>
                            Đã xác thực
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>