@model List<WebApp.Areas.Admin.Controllers.AuditController.StandardAuditLogDto>

@{
    ViewData["Title"] = "Standard Audit";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3 d-flex flex-wrap gap-2">
    <form asp-area="Admin" asp-controller="Audit" asp-action="EnableStandardAudit" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-success">
            Bật Standard Audit
        </button>
    </form>
    <form asp-area="Admin" asp-controller="Audit" asp-action="DisableStandardAudit" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-danger">
            Tắt Standard Audit
        </button>
    </form>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive" style="max-height: 80vh; overflow-y: auto;">
        <table class="table table-bordered table-striped table-hover mt-3" style="font-size: 0.95em;">
            <thead class="table-dark sticky-top">
                <tr>
                    <th>Thời gian</th>
                    <th>DB User</th>
                    <th>Schema</th>
                    <th>Object</th>
                    <th>Action</th>
                    <th>SQL Text</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@(log.EventTs?.ToString("dd/MM/yyyy HH:mm:ss") ?? "")</td>
                        <td>@log.DbUser</td>
                        <td>@log.ObjectSchema</td>
                        <td>@log.ObjectName</td>
                        <td>@log.Action</td>
                        <td style="max-width: 600px; white-space: pre-wrap; word-break: break-word;">@log.Note</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-3">
        Không có bản ghi standard audit nào.
    </div>
}
