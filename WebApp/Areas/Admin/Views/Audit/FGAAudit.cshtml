@model WebApp.Areas.Admin.Controllers.FgaAuditViewModel

@{
    ViewData["Title"] = "FGA Audit";
}

<style>
    .audit-header {
        background: linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(139,92,246,0.1) 100%);
        border-left: 4px solid #3b82f6;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .audit-header h2 {
        margin: 0;
        color: #1e40af;
        font-weight: 600;
    }

    .table-container {
        background: linear-gradient(135deg, 
            rgba(240, 253, 255, 0.2) 0%, 
            rgba(224, 242, 254, 0.18) 25%,
            rgba(186, 230, 253, 0.2) 50%,
            rgba(224, 242, 254, 0.18) 75%,
            rgba(240, 253, 255, 0.2) 100%);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border: 1px solid rgba(125, 211, 252, 0.3);
        max-height: 80vh;
        overflow-y: auto;
    }

    .audit-table {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
        font-size: 0.9em;
    }

    .audit-table thead {
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.8) 0%,
            rgba(37, 99, 235, 0.85) 25%,
            rgba(139, 92, 246, 0.9) 50%,
            rgba(168, 85, 247, 0.85) 75%,
            rgba(192, 132, 252, 0.8) 100%);
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.08);
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .audit-table thead th {
        padding: 1rem;
        font-weight: 600;
        text-align: left;
        font-size: 0.875rem;
        letter-spacing: 0.025em;
        border: none;
        white-space: nowrap;
    }

    .audit-table tbody tr {
        border-bottom: 1px solid rgba(186, 230, 253, 0.25);
        transition: background 0.3s ease, box-shadow 0.3s ease;
        background: linear-gradient(90deg, 
            rgba(240, 253, 255, 0.1) 0%,
            rgba(224, 242, 254, 0.12) 50%,
            rgba(240, 253, 255, 0.1) 100%);
    }

    .audit-table tbody tr:hover {
        background: linear-gradient(90deg, 
            rgba(147, 197, 253, 0.25) 0%,
            rgba(96, 165, 250, 0.22) 25%, 
            rgba(168, 85, 247, 0.2) 50%,
            rgba(96, 165, 250, 0.22) 75%,
            rgba(147, 197, 253, 0.25) 100%);
        box-shadow: 0 4px 12px rgba(96, 165, 250, 0.2);
    }

    .audit-table tbody tr:last-child {
        border-bottom: none;
    }

    .audit-table tbody td {
        padding: 1rem;
        color: #475569;
        font-size: 0.875rem;
        vertical-align: middle;
        border: none;
        max-width: 400px;
        white-space: pre-wrap;
        word-break: break-word;
    }

    .audit-table tbody td:first-child {
        font-weight: 600;
        color: #1e293b;
    }

    .no-data {
        padding: 3rem;
        text-align: center;
        color: #94a3b8;
        font-size: 1rem;
    }

    /* Responsive Design */
    @@media (max-width: 1199.98px) {
        .table-container {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .audit-table {
            min-width: 1100px;
        }
    }

    @@media (max-width: 767.98px) {
        .audit-header h2 {
            font-size: 1.5rem;
        }

        .audit-table {
            min-width: 1000px;
        }
    }
</style>

<div class="audit-header">
    <h2>@ViewData["Title"]</h2>
</div>

@* Hiển thị trạng thái *@
@if (Model?.Status != null)
{
    var status = Model.Status;
    <div class="alert @(status.Enabled ? "alert-success" : "alert-secondary") mb-3">
        <strong>FGA Audit:</strong>
        @if (status.Enabled)
        {
            <span class="badge bg-success">Đang bật (ENABLED)</span>
        }
        else
        {
            <span class="badge bg-secondary">Đang tắt (DISABLED)</span>
        }
    </div>
}
else
{
    <div class="alert alert-warning mb-3">
        <strong>FGA Audit:</strong>
        <span class="badge bg-warning">Không thể lấy trạng thái</span>
        <span class="ms-3">
            <small>Vui lòng làm mới trang hoặc kiểm tra kết nối API</small>
        </span>
    </div>
}

<div class="mb-3 d-flex flex-wrap gap-2">
    <form asp-area="Admin" asp-controller="Audit" asp-action="EnableFgaAudit" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-success">
            Bật FGA Audit
        </button>
    </form>
    <form asp-area="Admin" asp-controller="Audit" asp-action="DisableFgaAudit" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-danger">
            Tắt FGA Audit
        </button>
    </form>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (Model?.Logs != null && Model.Logs.Any())
{
    <div class="table-container">
        <table class="audit-table">
            <thead>
                <tr>
                    <th>Thời gian</th>
                    <th>DB User</th>
                    <th>OS User</th>
                    <th>User Host</th>
                    <th>Schema</th>
                    <th>Object</th>
                    <th>Policy</th>
                    <th>Statement</th>
                    <th>SCN</th>
                    <th>SQL Text</th>
                    <th>SQL Bind</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@(log.EventTs?.ToString("dd/MM/yyyy HH:mm:ss") ?? "")</td>
                        <td>@log.DbUser</td>
                        <td>@log.OsUser</td>
                        <td>@log.UserHost</td>
                        <td>@log.ObjectSchema</td>
                        <td>@log.ObjectName</td>
                        <td>@log.PolicyName</td>
                        <td>@log.StatementType</td>
                        <td>@(log.Scn?.ToString() ?? "")</td>
                        <td style="max-width: 400px; white-space: pre-wrap; word-break: break-word;">@log.SqlText</td>
                        <td style="max-width: 300px; white-space: pre-wrap; word-break: break-word;">@log.SqlBind</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-3">
        Không có bản ghi FGA audit nào.
    </div>
}
