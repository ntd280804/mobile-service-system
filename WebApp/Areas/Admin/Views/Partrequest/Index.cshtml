@model WebApp.Models.Common.PaginatedList<WebApp.Models.Part.PartRequestViewModel>
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Danh sách yêu cầu linh kiện";
    var roleString = HttpContextAccessor.HttpContext.Session.GetString("Role") ?? "";

    var roles = roleString.Split(',', StringSplitOptions.RemoveEmptyEntries)
                          .Select(r => r.Trim().ToUpperInvariant())
                          .ToList();
    bool HasRole(params string[] checkRoles) => roles.Intersect(checkRoles.Select(r => r.ToUpperInvariant())).Any();
}

<style>
    .partrequest-header {
        background: linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(139,92,246,0.1) 100%);
        border-left: 4px solid #3b82f6;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .partrequest-header h2 {
        margin: 0;
        color: #1e40af;
        font-weight: 600;
    }

    .table-container {
        background: linear-gradient(135deg, 
            rgba(240, 253, 255, 0.2) 0%, 
            rgba(224, 242, 254, 0.18) 25%,
            rgba(186, 230, 253, 0.2) 50%,
            rgba(224, 242, 254, 0.18) 75%,
            rgba(240, 253, 255, 0.2) 100%);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border: 1px solid rgba(125, 211, 252, 0.3);
    }

    .partrequest-table {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

    .partrequest-table thead {
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.8) 0%,
            rgba(37, 99, 235, 0.85) 25%,
            rgba(139, 92, 246, 0.9) 50%,
            rgba(168, 85, 247, 0.85) 75%,
            rgba(192, 132, 252, 0.8) 100%);
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.08);
    }

    .partrequest-table thead th {
        padding: 1rem;
        font-weight: 600;
        text-align: left;
        font-size: 0.875rem;
        letter-spacing: 0.025em;
        border: none;
        white-space: nowrap;
    }

    .partrequest-table tbody tr {
        border-bottom: 1px solid rgba(186, 230, 253, 0.25);
        transition: background 0.3s ease, box-shadow 0.3s ease;
        background: linear-gradient(90deg, 
            rgba(240, 253, 255, 0.1) 0%,
            rgba(224, 242, 254, 0.12) 50%,
            rgba(240, 253, 255, 0.1) 100%);
    }

    .partrequest-table tbody tr:hover {
        background: linear-gradient(90deg, 
            rgba(147, 197, 253, 0.25) 0%,
            rgba(96, 165, 250, 0.22) 25%, 
            rgba(168, 85, 247, 0.2) 50%,
            rgba(96, 165, 250, 0.22) 75%,
            rgba(147, 197, 253, 0.25) 100%);
        box-shadow: 0 4px 12px rgba(96, 165, 250, 0.2);
    }

    .partrequest-table tbody tr:last-child {
        border-bottom: none;
    }

    .partrequest-table tbody td {
        padding: 1rem;
        color: #475569;
        font-size: 0.875rem;
        vertical-align: middle;
        border: none;
    }

    .partrequest-table tbody td:first-child {
        font-weight: 600;
        color: #1e293b;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
        min-width: 85px;
        height: 38px;
    }

    .btn-info {
        background: linear-gradient(135deg, 
            rgba(14, 165, 233, 0.7) 0%,
            rgba(6, 182, 212, 0.75) 50%,
            rgba(8, 145, 178, 0.7) 100%);
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
        box-shadow: 0 4px 6px rgba(14, 165, 233, 0.25);
    }

    .btn-info:hover {
        background: linear-gradient(135deg, 
            rgba(14, 165, 233, 0.9) 0%,
            rgba(6, 182, 212, 0.95) 50%,
            rgba(8, 145, 178, 0.9) 100%);
        color: white;
        box-shadow: 0 6px 12px rgba(14, 165, 233, 0.4);
    }

    .no-data {
        padding: 3rem;
        text-align: center;
        color: #94a3b8;
        font-size: 1rem;
    }

    /* Responsive Design */
    @@media (max-width: 991.98px) {
        .table-container {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .partrequest-table {
            min-width: 800px;
        }
    }

    @@media (max-width: 767.98px) {
        .partrequest-header h2 {
            font-size: 1.5rem;
        }

        .partrequest-table thead {
            display: none;
        }

        .partrequest-table,
        .partrequest-table tbody,
        .partrequest-table tr,
        .partrequest-table td {
            display: block;
            width: 100%;
        }

        .partrequest-table {
            min-width: unset;
        }

        .partrequest-table tbody tr {
            margin-bottom: 1rem;
            border: 1px solid rgba(125, 211, 252, 0.3);
            border-radius: 0.5rem;
            background: linear-gradient(135deg,
                rgba(240, 253, 255, 0.15) 0%,
                rgba(224, 242, 254, 0.2) 100%);
        }

        .partrequest-table tbody td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid rgba(186, 230, 253, 0.2);
            position: relative;
            padding-left: 50%;
        }

        .partrequest-table tbody td:last-child {
            border-bottom: none;
            padding-left: 1rem;
        }

        .partrequest-table tbody td:before {
            content: attr(data-label);
            position: absolute;
            left: 1rem;
            font-weight: 600;
            color: #1e293b;
        }

        .partrequest-table tbody td[data-label="ACTION"]:before {
            display: none;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
        }
    }
</style>

<div class="partrequest-header">
    <h2>@ViewData["Title"]</h2>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="table-container">
    <table class="partrequest-table">
        <thead>
            <tr>
                <th>Request Id</th>
                <th>EMPLOYEE USERNAME</th>
                <th>In Date</th>
                <th>ORDER_ID</th>
                <th>STATUS</th>
                <th>ACTION</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Items != null && Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                <tr>
                    <td data-label="Request Id">@item.REQUEST_ID</td>
                    <td data-label="EMPLOYEE USERNAME">@item.EmpUsername</td>
                    <td data-label="In Date">@item.REQUEST_DATE.ToString("yyyy-MM-dd HH:mm")</td>
                    <td data-label="ORDER_ID">
                        <a asp-area="Admin"
                           asp-controller="Order"
                           asp-action="Details"
                           asp-route-id="@item.ORDER_ID"
                           class="text-decoration-none fw-bold text-primary">
                            @item.ORDER_ID
                        </a>
                    </td>
                    <td data-label="STATUS">@item.STATUS</td>
                    <td data-label="ACTION">
                        <div class="action-buttons">
                            <a class="btn-action btn-info"
                               asp-area="Admin"
                               asp-controller="Partrequest"
                               asp-action="Details"
                               asp-route-id="@item.REQUEST_ID">Xem chi tiết</a>
                            @if (HasRole("ROLE_ADMIN","ROLE_THUKHO"))
                            {
                                @if (item.STATUS == "Đang chờ")
                                {
                                    <a class="btn-action btn-info"
                                    asp-area="Admin"
                                    asp-controller="Partrequest"
                                    asp-action="Accept"
                                    asp-route-id="@item.REQUEST_ID">Duyệt yêu cầu</a>
                                    <a class="btn-action btn-info"
                                    asp-area="Admin"
                                    asp-controller="Partrequest"
                                    asp-action="Deny"
                                    asp-route-id="@item.REQUEST_ID">Từ chối</a>
                                }
                            }
                        </div>
                    </td>

                </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="no-data">Không có yêu cầu nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Pagination Component *@
@if (Model != null && Model.TotalPages > 0)
{
    <partial name="_Pagination" model="Model" />
}
