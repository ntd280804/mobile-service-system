@model WebApp.Models.Common.PaginatedList<WebApp.Models.Part.PartDto>

@{
    ViewData["Title"] = "Danh sách linh kiện";
    var query = Context.Request.Query;
    var status = query["status"].ToString();
}

<style>
    .part-header {
        background: linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(139,92,246,0.1) 100%);
        border-left: 4px solid #3b82f6;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .part-header h2 {
        margin: 0;
        color: #1e40af;
        font-weight: 600;
    }

    .table-container {
        background: linear-gradient(135deg, 
            rgba(240, 253, 255, 0.2) 0%, 
            rgba(224, 242, 254, 0.18) 25%,
            rgba(186, 230, 253, 0.2) 50%,
            rgba(224, 242, 254, 0.18) 75%,
            rgba(240, 253, 255, 0.2) 100%);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border: 1px solid rgba(125, 211, 252, 0.3);
    }

    .part-table {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

    .part-table thead {
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.8) 0%,
            rgba(37, 99, 235, 0.85) 25%,
            rgba(139, 92, 246, 0.9) 50%,
            rgba(168, 85, 247, 0.85) 75%,
            rgba(192, 132, 252, 0.8) 100%);
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.08);
    }

    .part-table thead th {
        padding: 1rem;
        font-weight: 600;
        text-align: center;
        font-size: 0.875rem;
        letter-spacing: 0.025em;
        border: none;
        white-space: nowrap;
    }

    .part-table tbody tr {
        border-bottom: 1px solid rgba(186, 230, 253, 0.25);
        transition: background 0.3s ease, box-shadow 0.3s ease;
        background: linear-gradient(90deg, 
            rgba(240, 253, 255, 0.1) 0%,
            rgba(224, 242, 254, 0.12) 50%,
            rgba(240, 253, 255, 0.1) 100%);
    }

    .part-table tbody tr:hover {
        background: linear-gradient(90deg, 
            rgba(147, 197, 253, 0.25) 0%,
            rgba(96, 165, 250, 0.22) 25%, 
            rgba(168, 85, 247, 0.2) 50%,
            rgba(96, 165, 250, 0.22) 75%,
            rgba(147, 197, 253, 0.25) 100%);
        box-shadow: 0 4px 12px rgba(96, 165, 250, 0.2);
    }

    .part-table tbody tr:last-child {
        border-bottom: none;
    }

    .part-table tbody td {
        padding: 1rem;
        color: #475569;
        font-size: 0.875rem;
        vertical-align: middle;
        border: none;
        text-align: center;
    }

    .btn-action {
        min-width: 85px;
        height: 38px;
        border: none;
        border-radius: 0.375rem;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: white;
    }

    .btn-detail {
        background: linear-gradient(135deg, rgba(14,165,233,0.7) 0%, rgba(8,145,178,0.7) 100%);
    }

    .btn-detail:hover {
        background: linear-gradient(135deg, rgba(14,165,233,0.9) 0%, rgba(8,145,178,0.9) 100%);
        box-shadow: 0 4px 12px rgba(14,165,233,0.4);
        color: white;
    }

    .qr-btn {
        background: linear-gradient(135deg, rgba(96,165,250,0.8) 0%, rgba(192,132,252,0.8) 100%);
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }

    .qr-btn:hover {
        background: linear-gradient(135deg, rgba(96,165,250,1) 0%, rgba(192,132,252,1) 100%);
        box-shadow: 0 4px 12px rgba(96,165,250,0.4);
    }

    .filter-form {
        background: linear-gradient(135deg, 
            rgba(240, 253, 255, 0.5) 0%, 
            rgba(224, 242, 254, 0.45) 25%,
            rgba(186, 230, 253, 0.5) 50%,
            rgba(224, 242, 254, 0.45) 75%,
            rgba(240, 253, 255, 0.5) 100%);
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 12px rgba(96, 165, 250, 0.15);
        margin-bottom: 1.5rem;
        border: 1px solid rgba(125, 211, 252, 0.3);
    }

    .filter-form .form-control,
    .filter-form .form-select {
        border: 1px solid rgba(96, 165, 250, 0.3);
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .filter-form .form-control:focus,
    .filter-form .form-select:focus {
        border-color: rgba(59, 130, 246, 0.5);
        box-shadow: 0 0 0 0.2rem rgba(96, 165, 250, 0.25);
    }

    .btn-search {
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.8) 0%,
            rgba(37, 99, 235, 0.85) 25%,
            rgba(139, 92, 246, 0.9) 50%,
            rgba(168, 85, 247, 0.85) 75%,
            rgba(192, 132, 252, 0.8) 100%);
        border: none;
        color: white;
        padding: 0.625rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 6px rgba(96, 165, 250, 0.3);
    }

    .btn-search:hover {
        background: linear-gradient(135deg, 
            rgba(37, 99, 235, 0.9) 0%,
            rgba(29, 78, 216, 0.95) 25%,
            rgba(124, 58, 237, 1) 50%,
            rgba(139, 92, 246, 0.95) 75%,
            rgba(168, 85, 247, 0.9) 100%);
        box-shadow: 0 6px 12px rgba(96, 165, 250, 0.4);
        color: white;
    }

    .btn-reset {
        background: linear-gradient(135deg, 
            rgba(148, 163, 184, 0.7) 0%,
            rgba(100, 116, 139, 0.75) 50%,
            rgba(71, 85, 105, 0.7) 100%);
        border: none;
        color: white;
        padding: 0.625rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        text-decoration: none;
        display: inline-block;
    }

    .btn-reset:hover {
        background: linear-gradient(135deg, 
            rgba(100, 116, 139, 0.9) 0%,
            rgba(71, 85, 105, 0.95) 50%,
            rgba(51, 65, 85, 0.9) 100%);
        box-shadow: 0 4px 8px rgba(71, 85, 105, 0.3);
        color: white;
    }

    @@media (max-width: 991.98px) {
        .part-table {
            font-size: 0.9rem;
        }
        
        .part-table thead th,
        .part-table tbody td {
            padding: 0.5rem 0.4rem;
        }

        .btn-action {
            min-width: 70px;
            font-size: 0.85rem;
            padding: 0.4rem 0.6rem;
        }
    }

    @@media (max-width: 767.98px) {
        .table-container {
            padding: 1rem;
        }

        .part-table thead {
            display: none;
        }

        .part-table tbody tr {
            display: block;
            margin-bottom: 1rem;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            padding: 1rem;
            background: white;
        }

        .part-table tbody tr:hover {
            transform: none;
        }

        .part-table tbody td {
            display: block;
            text-align: left;
            padding: 0.5rem 0;
            border: none;
        }

        .part-table tbody td::before {
            content: attr(data-label);
            font-weight: 600;
            color: #3b82f6;
            display: inline-block;
            width: 100px;
        }

        .part-table tbody td[data-label="Actions"]::before {
            display: none;
        }

        .btn-action {
            width: 100%;
            margin-top: 0.5rem;
        }
    }
</style>

<div class="part-header">
    <h2>@ViewData["Title"]</h2>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- Button quét QR -->
<div class="mb-3">
    <button type="button" class="btn qr-btn" data-bs-toggle="modal" data-bs-target="#qrScannerModal">
        <i class="bi bi-camera"></i> Quét QR Code
    </button>
</div>

<!-- Modal quét QR -->
<div class="modal fade" id="qrScannerModal" tabindex="-1" aria-labelledby="qrScannerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="qrScannerModalLabel">Quét QR Code</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="qr-reader" style="width: 100%;"></div>
                <div id="qr-reader-results" class="mt-3"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Filter/Search form -->
<form class="filter-form" method="get">
    <div class="row g-3">
        <div class="col-lg-2 col-md-3 col-sm-6">
            <input class="form-control" type="text" name="name" placeholder="Tên linh kiện" value="@query["name"]" />
        </div>
        <div class="col-lg-2 col-md-3 col-sm-6">
            <input class="form-control" type="text" name="serial" placeholder="Serial" value="@query["serial"]" />
        </div>
        <div class="col-lg-2 col-md-3 col-sm-6">
            <input class="form-control" type="text" name="manufacturer" placeholder="Hãng" value="@query["manufacturer"]" />
        </div>
        <div class="col-lg-2 col-md-3 col-sm-6">
            <select class="form-select" name="status">
                <option value="Trong kho" selected="@(status == "Trong kho" ? "selected" : null)">Trong kho</option>
                <option value="Đã gán" selected="@(status == "Đã gán" ? "selected" : null)">Đã gán</option>
                <option value="Đã xuất" selected="@(status == "Đã xuất kho" ? "selected" : null)">Đã xuất</option>
            </select>
        </div>
        <div class="col-lg-2 col-md-3 col-sm-6">
            <input class="form-control" type="number" name="priceMin" placeholder="Giá từ" value="@query["priceMin"]" />
        </div>
        <div class="col-lg-2 col-md-3 col-sm-6">
            <input class="form-control" type="number" name="priceMax" placeholder="Giá đến" value="@query["priceMax"]" />
        </div>
        <div class="col-lg-6 col-md-3 col-sm-6">
            <button class="btn btn-search w-100" type="submit">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
        </div>
        <div class="col-lg-6 col-md-3 col-sm-6">
            <a href="@Url.Action("Index","Part",new { area="Admin"})" class="btn btn-reset w-100">
                Đặt lại
            </a>
        </div>
    </div>
</form>

<div class="table-container">
    <table class="part-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Manufacturer</th>
                <th>Serial</th>
                <th>QR</th>
                <th>Status</th>
                <th>StockinId</th>
                <th>OrderId</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (Model?.Items != null && Model.Items.Any())
        {
            foreach (var item in Model.Items)
            {
                <tr>
                    <td data-label="#">@item.PartId</td>
                    <td data-label="Name">@item.Name</td>
                    <td data-label="Manufacturer">@item.Manufacturer</td>
                    <td data-label="Serial">@item.Serial</td>
                    <td data-label="QR">
                        @if (item.QRImage != null && item.QRImage.Length > 0)
                        {
                            var base64 = Convert.ToBase64String(item.QRImage);
                            var imgSrc = $"data:image/png;base64,{base64}";
                            <img src="@imgSrc" alt="QR Code" style="width:80px; height:80px;" />
                        }
                    </td>
                    <td data-label="Status">@item.Status</td>
                    <td data-label="StockinId">
                        @if (item.StockinID > 0)
                        {
                            <a asp-area="Admin" 
                               asp-controller="Import" 
                               asp-action="Details" 
                               asp-route-id="@item.StockinID"
                               class="text-decoration-none fw-bold text-primary">
                                @item.StockinID
                            </a>
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                    <td data-label="OrderId">
                        @if (item.OrderId.HasValue && item.OrderId.Value > 0)
                        {
                            <a asp-area="Admin" 
                               asp-controller="Order" 
                               asp-action="Details" 
                               asp-route-id="@item.OrderId.Value"
                               class="text-decoration-none fw-bold text-primary">
                                @item.OrderId.Value
                            </a>
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                    <td data-label="Price">@item.Price</td>
                    <td data-label="Actions">
                        <a class="btn-action btn-detail"
                           asp-area="Admin"
                           asp-controller="Part"
                           asp-action="Details"
                           asp-route-serial="@item.Serial">Xem chi tiết</a>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center">Không có linh kiện nào.</td>
            </tr>
        }
    </tbody>
    </table>
</div>

@* Pagination Component *@
@if (Model != null && Model.TotalPages > 0)
{
    <partial name="_Pagination" model="Model" />
}

<!-- Thư viện quét QR -->
<script src="https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
<script>
    let html5QrcodeScanner = null;

    // Khởi tạo scanner khi modal được mở
    document.getElementById('qrScannerModal').addEventListener('shown.bs.modal', function () {
        if (html5QrcodeScanner === null) {
            html5QrcodeScanner = new Html5Qrcode("qr-reader");
        }
        
        html5QrcodeScanner.start(
            { facingMode: "environment" }, // Sử dụng camera sau (mobile) hoặc camera mặc định (desktop)
            {
                fps: 10,
                qrbox: { width: 250, height: 250 }
            },
            onScanSuccess,
            onScanError
        ).catch(err => {
            console.error("Không thể khởi động camera:", err);
            document.getElementById('qr-reader-results').innerHTML = 
                '<div class="alert alert-danger">Không thể truy cập camera. Vui lòng kiểm tra quyền truy cập camera.</div>';
        });
    });

    // Dừng scanner khi modal đóng
    document.getElementById('qrScannerModal').addEventListener('hidden.bs.modal', function () {
        if (html5QrcodeScanner !== null) {
            html5QrcodeScanner.stop().catch(err => console.error("Lỗi khi dừng scanner:", err));
        }
        document.getElementById('qr-reader-results').innerHTML = '';
    });

    function onScanSuccess(decodedText, decodedResult) {
        // Dừng scanner sau khi quét thành công
        if (html5QrcodeScanner !== null) {
            html5QrcodeScanner.stop().catch(err => console.error("Lỗi khi dừng scanner:", err));
        }

        // Hiển thị kết quả
        document.getElementById('qr-reader-results').innerHTML = 
            '<div class="alert alert-info">Đã quét: ' + decodedText + '</div>' +
            '<div class="alert alert-success">Đang tải thông tin linh kiện...</div>';

        // Chuyển đến trang Details với serial từ QR code
        window.location.href = `/Admin/Part/Details?serial=${encodeURIComponent(decodedText)}`;
    }

    function onScanError(errorMessage) {
        // Bỏ qua lỗi quét (sẽ tiếp tục quét)
        // console.log("Lỗi quét QR:", errorMessage);
    }
</script>

