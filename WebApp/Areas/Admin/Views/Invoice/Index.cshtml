@model WebApp.Models.Common.PaginatedList<InvoiceSummaryViewModel>
@{
    ViewData["Title"] = "Quản lý hóa đơn";
}

<style>
    .invoice-header {
        background: linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(139,92,246,0.1) 100%);
        border-left: 4px solid #3b82f6;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .invoice-header h2 {
        margin: 0;
        color: #1e40af;
        font-weight: 600;
    }

    .table-container {
        background: linear-gradient(135deg, 
            rgba(240, 253, 255, 0.2) 0%, 
            rgba(224, 242, 254, 0.18) 25%,
            rgba(186, 230, 253, 0.2) 50%,
            rgba(224, 242, 254, 0.18) 75%,
            rgba(240, 253, 255, 0.2) 100%);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border: 1px solid rgba(125, 211, 252, 0.3);
    }

    .invoice-table {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

    .invoice-table thead {
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.8) 0%,
            rgba(37, 99, 235, 0.85) 25%,
            rgba(139, 92, 246, 0.9) 50%,
            rgba(168, 85, 247, 0.85) 75%,
            rgba(192, 132, 252, 0.8) 100%);
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.08);
    }

    .invoice-table thead th {
        padding: 1rem;
        font-weight: 600;
        text-align: left;
        font-size: 0.875rem;
        letter-spacing: 0.025em;
        border: none;
        white-space: nowrap;
    }

    .invoice-table tbody tr {
        border-bottom: 1px solid rgba(186, 230, 253, 0.25);
        transition: background 0.3s ease, box-shadow 0.3s ease;
        background: linear-gradient(90deg, 
            rgba(240, 253, 255, 0.1) 0%,
            rgba(224, 242, 254, 0.12) 50%,
            rgba(240, 253, 255, 0.1) 100%);
    }

    .invoice-table tbody tr:hover {
        background: linear-gradient(90deg, 
            rgba(147, 197, 253, 0.25) 0%,
            rgba(96, 165, 250, 0.22) 25%, 
            rgba(168, 85, 247, 0.2) 50%,
            rgba(96, 165, 250, 0.22) 75%,
            rgba(147, 197, 253, 0.25) 100%);
        box-shadow: 0 4px 12px rgba(96, 165, 250, 0.2);
    }

    .invoice-table tbody tr:last-child {
        border-bottom: none;
    }

    .invoice-table tbody td {
        padding: 1rem;
        color: #475569;
        font-size: 0.875rem;
        vertical-align: middle;
        border: none;
    }

    .invoice-table tbody td:first-child {
        font-weight: 600;
        color: #1e293b;
    }

    .status-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.5) 0%,
            rgba(37, 99, 235, 0.55) 50%, 
            rgba(29, 78, 216, 0.5) 100%);
        color: #ffffff;
        border: 1px solid rgba(59, 130, 246, 0.4);
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
        min-width: 85px;
        height: 38px;
    }

    .btn-info {
        background: linear-gradient(135deg, 
            rgba(14, 165, 233, 0.7) 0%,
            rgba(6, 182, 212, 0.75) 50%,
            rgba(8, 145, 178, 0.7) 100%);
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
        box-shadow: 0 4px 6px rgba(14, 165, 233, 0.25);
    }

    .btn-info:hover {
        background: linear-gradient(135deg, 
            rgba(14, 165, 233, 0.9) 0%,
            rgba(6, 182, 212, 0.95) 50%,
            rgba(8, 145, 178, 0.9) 100%);
        color: white;
        box-shadow: 0 6px 12px rgba(14, 165, 233, 0.4);
    }

    .btn-success {
        background: linear-gradient(135deg, 
            rgba(51, 204, 0, 1) 0%,
            rgba(45, 179, 0, 1) 50%,
            rgba(38, 153, 0, 1) 100%);
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
        box-shadow: 0 4px 6px rgba(51, 204, 0, 0.25);
    }

    .btn-success:hover {
        background: linear-gradient(135deg, 
            rgba(51, 204, 0, 1) 0%,
            rgba(45, 179, 0, 1) 50%,
            rgba(38, 153, 0, 1) 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(51, 204, 0, 0.4);
    }

    .no-data {
        padding: 3rem;
        text-align: center;
        color: #94a3b8;
        font-size: 1rem;
    }

    .filter-form {
        background: linear-gradient(135deg, 
            rgba(240, 253, 255, 0.5) 0%, 
            rgba(224, 242, 254, 0.45) 25%,
            rgba(186, 230, 253, 0.5) 50%,
            rgba(224, 242, 254, 0.45) 75%,
            rgba(240, 253, 255, 0.5) 100%);
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 12px rgba(96, 165, 250, 0.15);
        margin-bottom: 1.5rem;
        border: 1px solid rgba(125, 211, 252, 0.3);
    }

    .filter-form .form-control,
    .filter-form .form-select {
        border: 1px solid rgba(96, 165, 250, 0.3);
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .filter-form .form-control:focus,
    .filter-form .form-select:focus {
        border-color: rgba(59, 130, 246, 0.5);
        box-shadow: 0 0 0 0.2rem rgba(96, 165, 250, 0.25);
    }

    .btn-search {
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.8) 0%,
            rgba(37, 99, 235, 0.85) 25%,
            rgba(139, 92, 246, 0.9) 50%,
            rgba(168, 85, 247, 0.85) 75%,
            rgba(192, 132, 252, 0.8) 100%);
        border: none;
        color: white;
        padding: 0.625rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 6px rgba(96, 165, 250, 0.3);
    }

    .btn-search:hover {
        background: linear-gradient(135deg, 
            rgba(37, 99, 235, 0.9) 0%,
            rgba(29, 78, 216, 0.95) 25%,
            rgba(124, 58, 237, 1) 50%,
            rgba(139, 92, 246, 0.95) 75%,
            rgba(168, 85, 247, 0.9) 100%);
        box-shadow: 0 6px 12px rgba(96, 165, 250, 0.4);
        color: white;
    }

    .btn-reset {
        background: linear-gradient(135deg, 
            rgba(148, 163, 184, 0.7) 0%,
            rgba(100, 116, 139, 0.75) 50%,
            rgba(71, 85, 105, 0.7) 100%);
        border: none;
        color: white;
        padding: 0.625rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 6px rgba(100, 116, 139, 0.3);
    }

    .btn-reset:hover {
        background: linear-gradient(135deg, 
            rgba(100, 116, 139, 0.8) 0%,
            rgba(71, 85, 105, 0.85) 50%,
            rgba(51, 65, 85, 0.8) 100%);
        box-shadow: 0 6px 12px rgba(100, 116, 139, 0.4);
        color: white;
    }

    /* Responsive Design */
    @@media (max-width: 991.98px) {
        .table-container {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .invoice-table {
            min-width: 900px;
        }
    }

    @@media (max-width: 767.98px) {
        .invoice-header h2 {
            font-size: 1.5rem;
        }

        .invoice-table thead {
            display: none;
        }

        .invoice-table,
        .invoice-table tbody,
        .invoice-table tr,
        .invoice-table td {
            display: block;
            width: 100%;
        }

        .invoice-table {
            min-width: unset;
        }

        .invoice-table tbody tr {
            margin-bottom: 1rem;
            border: 1px solid rgba(125, 211, 252, 0.3);
            border-radius: 0.5rem;
            background: linear-gradient(135deg,
                rgba(240, 253, 255, 0.15) 0%,
                rgba(224, 242, 254, 0.2) 100%);
        }

        .invoice-table tbody td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid rgba(186, 230, 253, 0.2);
            position: relative;
            padding-left: 50%;
        }

        .invoice-table tbody td:last-child {
            border-bottom: none;
            padding-left: 1rem;
        }

        .invoice-table tbody td:before {
            content: attr(data-label);
            position: absolute;
            left: 1rem;
            font-weight: 600;
            color: #1e293b;
        }

        /* Ẩn cột Thao tác trên mobile */
        .invoice-table tbody td[data-label="Thao tác"]:before {
            display: none;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
        }
    }
</style>

<div class="invoice-header">
    <h2>@ViewData["Title"]</h2>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<!-- Filter/Search form -->
<form class="filter-form" method="get">
    <div class="row g-3">
        <div class="col-lg-3 col-md-6 col-sm-6">
            <input class="form-control" type="text" name="invoiceId" placeholder="Mã hóa đơn" value="@Context.Request.Query["invoiceId"]" />
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <input class="form-control" type="text" name="customerPhone" placeholder="SĐT khách hàng" value="@Context.Request.Query["customerPhone"]" />
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <input class="form-control" type="date" name="dateFrom" placeholder="Từ ngày" value="@Context.Request.Query["dateFrom"]" />
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <input class="form-control" type="date" name="dateTo" placeholder="Đến ngày" value="@Context.Request.Query["dateTo"]" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <button class="btn btn-search w-100" type="submit">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <a href="@Url.Action("Index","Invoice",new { area="Admin"})" class="btn btn-reset w-100">
                Đặt lại
            </a>
        </div>
    </div>
</form>

<div class="table-container">
    <table class="invoice-table">
        <thead>
            <tr>
                <th>Mã hóa đơn</th>
                <th>StockOut ID</th>
                <th>SĐT khách</th>
                <th>Nhân viên</th>
                <th>Ngày lập</th>
                <th class="text-end">Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Items != null && Model.Items.Any())
            {
                foreach (var invoice in Model.Items)
                {
                    <tr>
                        <td data-label="Mã hóa đơn">@invoice.InvoiceId</td>
                        <td data-label="StockOut ID">
                            <a asp-area="Admin"
                               asp-controller="Export"
                               asp-action="Details"
                               asp-route-id="@invoice.StockOutId"
                               class="text-decoration-none fw-bold text-primary">
                                @invoice.StockOutId
                            </a>
                        </td>
                        <td data-label="SĐT khách">@invoice.CustomerPhone</td>
                        <td data-label="Nhân viên">@invoice.EmpUsername</td>
                        <td data-label="Ngày lập">@invoice.InvoiceDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td data-label="Tổng tiền" class="text-end">@invoice.TotalAmount.ToString("N0") ₫</td>
                        <td data-label="Trạng thái">
                            <span class="status-badge">@invoice.Status</span>
                        </td>
                        <td data-label="Thao tác">
                            <div class="action-buttons">
                                <a class="btn-action btn-info" asp-action="Details" asp-route-id="@invoice.InvoiceId">Chi tiết</a>
                                <a class="btn-action btn-success" asp-action="DownloadPdf" asp-route-id="@invoice.InvoiceId">Tải PDF</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="no-data">Chưa có hóa đơn nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Pagination Component *@
@if (Model != null && Model.TotalPages > 0)
{
    <partial name="_Pagination" model="Model" />
}

