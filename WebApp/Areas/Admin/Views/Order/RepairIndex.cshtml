@model List<WebApp.Models.Order.OrderDto>
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Danh sách đơn hàng";
    var roleString = HttpContextAccessor.HttpContext.Session.GetString("Role") ?? "";
    var roles = roleString.Split(',', StringSplitOptions.RemoveEmptyEntries)
                          .Select(r => r.Trim().ToUpperInvariant())
                          .ToList();
    bool HasRole(params string[] checkRoles) => roles.Intersect(checkRoles.Select(r => r.ToUpperInvariant())).Any();
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (HasRole("ROLE_ADMIN", "ROLE_TIEPTAN"))
{ 
<a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Create">Thêm mới</a>
}
<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Customer Phone</th>
            <th>Receiver Emp</th>
            <th>Handler Emp</th>
            <th>Order Type</th>
            <th>Received Date</th>
            <th>Status</th>
            <th>Description</th>
            <th>Actions</th> <!-- Cột hành động -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.CustomerPhone</td>
                    <td>@order.ReceiverEmpName</td>
                    <td>@order.HandlerEmpName</td>
                    <td>@order.OrderType</td>
                    <td>@order.ReceivedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@order.Status</td>
                    <td>@order.Description</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Details", "Order", new { id = order.OrderId })">Chi tiết</a>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Create", "PartRequest", new { id = order.OrderId })">Yêu cầu linh kiện</a>
                        @if (order.Status != "Đã hoàn thành")
                        {
                            <!-- Nút "Hoàn thành" để mở modal -->
                            <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#completeOrderModal-@order.OrderId">
                                Hoàn thành
                            </button>
                        }

                        <!-- Modal để xác nhận và chọn file private key -->
                        <div class="modal fade" id="completeOrderModal-@order.OrderId" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form id="exportForm-@order.OrderId" method="post" asp-area="Admin" asp-controller="Export" asp-action="Create">
                                        @Html.AntiForgeryToken()

                                        <div class="modal-body">
                                            <p>Để hoàn thành đơn hàng, bạn cần cung cấp PFX certificate để ký số PDF.</p>

                                            <input type="hidden" name="orderid" value="@order.OrderId" />

                                            <div class="mb-3">
                                                <label for="pfxFile-@order.OrderId" class="form-label">Chọn file PFX Certificate (.pfx, .p12):</label>
                                                <input class="form-control" type="file" id="pfxFile-@order.OrderId" required accept=".pfx,.p12">
                                                <small class="form-text text-muted">File PFX certificate từ CA</small>
                                            </div>

                                            <div class="mb-3">
                                                <label for="pfxPassword-@order.OrderId" class="form-label">Mật khẩu PFX:</label>
                                                <input class="form-control" type="password" id="pfxPassword-@order.OrderId" name="CertificatePassword" required placeholder="Nhập mật khẩu PFX">
                                            </div>

                                            <input type="hidden" id="pfxContent-@order.OrderId" name="CertificatePfxBase64" required />

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                            <button type="button" class="btn btn-primary" onclick="processKeyAndSubmit(@order.OrderId)">Xác nhận &amp; Xuất kho</button>
                                        </div>
                                    </form>

                                    <script>
                                        (function () {
                                            var orderId = @order.OrderId;
                                            var fileInput = document.getElementById('pfxFile-' + orderId);
                                            var contentInput = document.getElementById('pfxContent-' + orderId);
                                            if (!fileInput || !contentInput) {
                                                return;
                                            }

                                            fileInput.addEventListener('change', function (e) {
                                                var file = e.target.files && e.target.files[0];
                                                if (!file) {
                                                    contentInput.value = "";
                                                    return;
                                                }

                                                var reader = new FileReader();
                                                reader.onload = function (evt) {
                                                    var result = evt.target.result || "";
                                                    var base64 = result.split(',')[1] || result;
                                                    contentInput.value = base64;
                                                };
                                                reader.onerror = function () {
                                                    contentInput.value = "";
                                                    alert("Lỗi khi đọc file PFX.");
                                                };
                                                reader.readAsDataURL(file);
                                            });
                                        })();

                                        if (typeof window.processKeyAndSubmit !== "function") {
                                            window.processKeyAndSubmit = function (orderId) {
                                                var passwordInput = document.getElementById('pfxPassword-' + orderId);
                                                var contentInput = document.getElementById('pfxContent-' + orderId);
                                                var form = document.getElementById('exportForm-' + orderId);

                                                if (!contentInput || !passwordInput || !form) {
                                                    alert("Không thể đọc dữ liệu chứng thư. Vui lòng tải lại trang.");
                                                    return;
                                                }

                                                passwordInput.value = (passwordInput.value || "").trim();

                                                if (!contentInput.value) {
                                                    alert("Vui lòng chọn file PFX Certificate.");
                                                    return;
                                                }

                                                if (!passwordInput.value) {
                                                    alert("Vui lòng nhập mật khẩu PFX.");
                                                    return;
                                                }

                                                form.submit();
                                            };
                                        }
                                    </script>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">Không có đơn hàng nào.</td>
            </tr>
        }
    </tbody>
</table>

