<div class="order-header">
    <h2>@ViewData["Title"]</h2>
    @if (HasRole("ROLE_ADMIN", "ROLE_TIEPTAN"))
    { 
        <a class="add-new-link" asp-area="Admin" asp-controller="Order" asp-action="Create">Thêm mới</a>
    }
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- Filter/Search form -->
<form class="filter-form" method="get">
    <div class="row g-3">
        <div class="col-lg-4 col-md-6 col-sm-6">
            <input class="form-control" type="text" name="customerPhone" placeholder="SĐT khách hàng" value="@Context.Request.Query["customerPhone"]" />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-6">
            <select class="form-select" name="status">
                <option value="">-- Tất cả trạng thái --</option>
                <option value="PENDING" selected="@(Context.Request.Query["status"] == "PENDING" ? "selected" : null)">Chờ xử lý</option>
                <option value="PROCESSING" selected="@(Context.Request.Query["status"] == "PROCESSING" ? "selected" : null)">Đang xử lý</option>
                <option value="COMPLETED" selected="@(Context.Request.Query["status"] == "COMPLETED" ? "selected" : null)">Hoàn thành</option>
                <option value="CANCELLED" selected="@(Context.Request.Query["status"] == "CANCELLED" ? "selected" : null)">Đã hủy</option>
            </select>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-6">
            <input class="form-control" type="date" name="receivedDate" placeholder="Ngày nhận" value="@Context.Request.Query["receivedDate"]" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <button class="btn btn-search w-100" type="submit">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <a href="@Url.Action("WarrantyIndex","Order",new { area="Admin"})" class="btn btn-reset w-100">
                Đặt lại
            </a>
        </div>
    </div>
</form>

<div class="table-container">
    <table class="order-table">
    <thead>
        <tr>
            <th>#</th>
            <th>Customer Phone</th>
            <th>Receiver Emp</th>
            <th>Handler Emp</th>
            <th>Order Type</th>
            <th>Received Date</th>
            <th>Status</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Items != null && Model.Items.Any())
        {
            foreach (var order in Model.Items)
            {
                <tr>
                    <td data-label="#">@order.OrderId</td>
                    <td data-label="Customer Phone">@order.CustomerPhone</td>
                    <td data-label="Receiver Emp">@order.ReceiverEmpName</td>
                    <td data-label="Handler Emp">@order.HandlerEmpName</td>
                    <td data-label="Order Type">@order.OrderType</td>
                    <td data-label="Received Date">@order.ReceivedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td data-label="Status">@order.Status</td>
                    <td data-label="Description">@order.Description</td>
                    <td data-label="Actions">
                        <a class="btn-action btn-detail" href="@Url.Action("Details", "Order", new { id = order.OrderId })">Chi tiết</a>
                        @if (order.Status != "Đã hoàn thành")
                        {
                            <!-- Nút "Hoàn thành" để mở modal -->
                            <button type="button" class="btn-action btn-complete" data-bs-toggle="modal" data-bs-target="#completeOrderModal-@order.OrderId">
                                Hoàn thành
                            </button>
                        }

                        <!-- Modal để xác nhận và chọn file private key -->
                        <div class="modal fade" id="completeOrderModal-@order.OrderId" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form id="exportForm-@order.OrderId" method="post" asp-area="Admin" asp-controller="Export" asp-action="Create">

                                        <div class="modal-body">
                                            <p>Để hoàn thành đơn hàng, bạn cần cung cấp PFX certificate để ký số PDF.</p>

                                            <input type="hidden" name="orderid" value="@order.OrderId" />

                                            <div class="mb-3">
                                                <label for="pfxFile-@order.OrderId" class="form-label">Chọn file PFX Certificate (.pfx, .p12):</label>
                                                <input class="form-control" type="file" id="pfxFile-@order.OrderId" required accept=".pfx,.p12">
                                                <small class="form-text text-muted">File PFX certificate từ CA</small>
                                            </div>

                                            <div class="mb-3">
                                                <label for="pfxPassword-@order.OrderId" class="form-label">Mật khẩu PFX:</label>
                                                <input class="form-control" type="password" id="pfxPassword-@order.OrderId" name="CertificatePassword" required placeholder="Nhập mật khẩu PFX">
                                            </div>

                                            <input type="hidden" id="pfxContent-@order.OrderId" name="CertificatePfxBase64" required />

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                            <button type="button" class="btn btn-primary" onclick="processKeyAndSubmit(@order.OrderId)">Xác nhận &amp; Xuất kho</button>
                                        </div>
                                    </form>

                                    <script>
                                        function processKeyAndSubmit(orderId) {
                                            const fileInput = document.getElementById(`pfxFile-${orderId}`);
                                            const passwordInput = document.getElementById(`pfxPassword-${orderId}`);
                                            const contentInput = document.getElementById(`pfxContent-${orderId}`); // input hidden
                                            const form = document.getElementById(`exportForm-${orderId}`);

                                            const file = fileInput.files[0];
                                            if (!file) {
                                                alert("Vui lòng chọn file PFX Certificate.");
                                                return;
                                            }

                                            if (!passwordInput.value.trim()) {
                                                alert("Vui lòng nhập mật khẩu PFX.");
                                                return;
                                            }

                                            const reader = new FileReader();

                                            reader.onload = function(e) {
                                                // Convert file to base64
                                                const base64 = e.target.result.split(',')[1] || e.target.result;
                                                contentInput.value = base64;

                                                // Submit form SAU KHI ĐỌC VÀ GÁN HOÀN TẤT
                                                form.submit();
                                            };

                                            reader.onerror = function() {
                                                alert("Lỗi khi đọc file PFX.");
                                            };

                                            reader.readAsDataURL(file);
                                        }
                                    </script>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">Không có đơn hàng nào.</td>
            </tr>
        }
    </tbody>
    </table>
</div>

@* Pagination Component *@
@if (Model != null && Model.TotalPages > 0)
{
    <partial name="_Pagination" model="Model" />
}

