<div class="employee-header">
    <h2>@ViewData["Title"]</h2>
    <a class="btn-add-new" asp-area="Admin" asp-controller="Employee" asp-action="Register">
        <i class="bi bi-plus-circle me-1"></i> Thêm mới
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Filter/Search form -->
<form class="filter-form" method="get">
    <div class="row g-3">
        <div class="col-lg-3 col-md-4 col-sm-6">
            <input class="form-control" type="text" name="fullName" placeholder="Tên nhân viên" value="@Context.Request.Query["fullName"]" />
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <input class="form-control" type="text" name="username" placeholder="Username" value="@Context.Request.Query["username"]" />
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <select class="form-select" name="role">
                <option value="">-- Tất cả vai trò --</option>
                <option value="ROLE_ADMIN" selected="@(Context.Request.Query["role"] == "ROLE_ADMIN" ? "selected" : null)">Admin</option>
                <option value="ROLE_TIEPTAN" selected="@(Context.Request.Query["role"] == "ROLE_TIEPTAN" ? "selected" : null)">Tiếp tân</option>
                <option value="ROLE_KITHUATVIEN" selected="@(Context.Request.Query["role"] == "ROLE_KITHUATVIEN" ? "selected" : null)">Kỹ thuật viên</option>
                <option value="ROLE_THUKHO" selected="@(Context.Request.Query["role"] == "ROLE_THUKHO" ? "selected" : null)">Thủ kho</option>
            </select>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <select class="form-select" name="status">
                <option value="">-- Tất cả trạng thái --</option>
                <option value="ACTIVE" selected="@(Context.Request.Query["status"] == "ACTIVE" ? "selected" : null)">Hoạt động</option>
                <option value="LOCKED" selected="@(Context.Request.Query["status"] == "LOCKED" ? "selected" : null)">Đã khóa</option>
            </select>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <button class="btn btn-search w-100" type="submit">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <a href="@Url.Action("Index","Employee",new { area="Admin"})" class="btn btn-reset w-100">
                Đặt lại
            </a>
        </div>
    </div>
</form>

<div class="table-container">
    <table class="employee-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Username</th>
                <th>Status</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Items != null && Model.Items.Any())
            {
                foreach (var emp in Model.Items)
                {
                    <tr>
                        <td data-label="#">@emp.EmpId</td>
                        <td data-label="Full Name">@emp.FullName</td>
                        <td data-label="Username">@emp.Username</td>
                        <td data-label="Status">
                            <span class="status-badge @(emp.Status == "OPEN" ? "status-open" : "status-locked")">
                                @emp.Status
                            </span>
                        </td>
                        <td data-label="Email">@emp.Email</td>
                        <td data-label="Phone">@emp.Phone</td>
                        <td data-label="Role">@emp.Roles</td>
                        <td data-label="Actions">
                            <div class="action-buttons">
                                @if (emp.Status == "OPEN")
                                {
                                    <form method="post" asp-action="Lock" asp-controller="Employee" class="d-inline">
                                        <input type="hidden" name="username" value="@emp.Username" />
                                        <button type="submit" class="btn-action btn-lock">Lock</button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-action="Unlock" asp-controller="Employee" class="d-inline">
                                        <input type="hidden" name="username" value="@emp.Username" />
                                        <button type="submit" class="btn-action btn-unlock">Unlock</button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        <div class="no-employees">
                            <i class="bi bi-inbox" style="font-size: 3rem; display: block; margin-bottom: 1rem; opacity: 0.3;"></i>
                            Không có nhân viên nào.
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

