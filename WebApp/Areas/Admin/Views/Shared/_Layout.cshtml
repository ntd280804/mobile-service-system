    <script>
        // Sidebar toggle for responsive layout
        (function () {
            const body = document.body;
            const toggleBtn = document.getElementById('sidebarToggle');
            const backdrop = document.getElementById('sidebarBackdrop');
            const navLinks = document.querySelectorAll('#adminSidebar .nav-link');

            const closeSidebar = () => body.classList.remove('sidebar-open');
            const openSidebar = () => body.classList.add('sidebar-open');
            const toggleSidebar = () => body.classList.toggle('sidebar-open');

            toggleBtn?.addEventListener('click', toggleSidebar);
            backdrop?.addEventListener('click', closeSidebar);
            
            // Thêm xử lý cho nút đóng menu trong sidebar
            const closeBtn = document.getElementById('sidebarClose');
            closeBtn?.addEventListener('click', closeSidebar);
            
            // Chỉ đóng sidebar khi click vào link thực sự (không phải collapse toggle)
            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    // Nếu đây là collapse toggle thì không đóng sidebar
                    if (link.classList.contains('collapse-toggle')) {
                        return;
                    }
                    
                    // Nếu đây là link có href thực sự thì đóng sidebar trên mobile
                    const href = link.getAttribute('href');
                    if (window.innerWidth < 992 && href && href !== '#' && !href.startsWith('#')) {
                        setTimeout(() => closeSidebar(), 100);
                    }
                });
            });

            window.addEventListener('resize', () => {
                if (window.innerWidth >= 992) {
                    closeSidebar();
                }
            });
            
            // Disable Bootstrap collapse animations completely
            const style = document.createElement('style');
            style.textContent = `
                .sidebar .collapse.collapsing {
                    transition: none !important;
                    height: auto !important;
                    display: none !important;
                }
            `;
            document.head.appendChild(style);
            
            // Handle collapse toggle with smooth animation
            const collapseToggles = document.querySelectorAll('.sidebar .collapse-toggle');
            
            collapseToggles.forEach(toggle => {
                toggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    const targetId = this.getAttribute('href').substring(1);
                    const targetCollapse = document.getElementById(targetId);
                    
                    if (!targetCollapse) return;
                    
                    const isExpanded = this.getAttribute('aria-expanded') === 'true';
                    
                    // Close all other collapses smoothly
                    const allCollapses = document.querySelectorAll('.sidebar .collapse');
                    const allToggles = document.querySelectorAll('.sidebar .collapse-toggle');
                    
                    allCollapses.forEach(collapse => {
                        if (collapse.id !== targetId && collapse.classList.contains('show')) {
                            collapse.classList.remove('show');
                        }
                    });
                    
                    allToggles.forEach(t => {
                        if (t !== toggle) {
                            t.setAttribute('aria-expanded', 'false');
                        }
                    });
                    
                    // Toggle target collapse with animation
                    if (isExpanded) {
                        targetCollapse.classList.remove('show');
                        toggle.setAttribute('aria-expanded', 'false');
                    } else {
                        // Small delay to ensure display is set before animation
                        setTimeout(() => {
                            targetCollapse.classList.add('show');
                            toggle.setAttribute('aria-expanded', 'true');
                        }, 10);
                    }
                });
            });
        })();
    </script>
    <script>
        // SignalR connection cho Admin
        @inject IConfiguration Configuration
        const adminSessionId = '@(sessionId ?? "")';
        console.log('Admin sessionId:', adminSessionId);
        
        if (adminSessionId) {
            // Tạo SignalR connection
            const connection = new signalR.HubConnectionBuilder()
                .withUrl('@Configuration["SignalR:NotificationHubUrl"]?sessionId=' + encodeURIComponent(adminSessionId))
                .withAutomaticReconnect()
                .build();
            
            const dashboardUrl = '@Url.Action("Index", "Home", new { area = "Admin" })';
            const logoutUrl = '@Url.Action("Logout", "Employee", new { area = "Admin" })';
            const loginUrl = '@Url.Action("Login", "Employee", new { area = "Admin" })';

            // Lắng nghe ForceLogout từ server
            connection.on('ForceLogout', async function(message) {
                try {
                    await fetch(logoutUrl, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                        }
                    });
                } catch (err) {
                    console.error('Logout request failed', err);
                } finally {
                    // Chuyển về login
                    window.location.href = loginUrl;
                }
            });

            // Start SignalR connection
            async function startConnection() {
                try {
                    await connection.start();
                    console.log('SignalR connected (Admin)');
                } catch (err) {
                    console.error('SignalR start error:', err);
                    setTimeout(startConnection, 5000); // thử lại sau 5s
                }
            }

            startConnection();

            // Đồng bộ login/logout đa tab
            const channel = new BroadcastChannel('Admin_auth_channel');

            channel.onmessage = (event) => {
                console.log('📢 Nhận auth event từ tab khác:', event.data);
                if (event.data === 'logout') {
                    setTimeout(() => {
                        window.location.href = loginUrl;
                    }, 1000);
                } else if (event.data === 'login') {
                    setTimeout(() => {
                        window.location.href = dashboardUrl;
                    }, 1000);
                }
            };

            // Gửi sự kiện logout từ form
            const logoutForm = document.querySelector('form[action$="Logout"]');
            if (logoutForm) {
                logoutForm.addEventListener('submit', () => {
                    channel.postMessage('logout');
                    console.log('📡 Gửi logout event sang các tab khác');
                });
            }

            const loginLink = document.querySelector('a[href*="Login"]');
            if (loginLink) {
                loginLink.addEventListener('click', () => {
                    channel.postMessage('login');
                    console.log('📡 Gửi login event sang các tab khác');
                });
            }
        }
    </script>
    <script>
        // Flag để cho phép đóng modal sau khi upload thành công (global scope)
