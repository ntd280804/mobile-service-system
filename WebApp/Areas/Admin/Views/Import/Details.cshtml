@model WebApp.Models.Part.ImportDetailViewModel

<style>
    .detail-header {
        background: linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(139,92,246,0.1) 100%);
        border-left: 4px solid #3b82f6;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .detail-header h2 {
        margin: 0;
        color: #1e40af;
        font-weight: 600;
    }

    .detail-card {
        background: linear-gradient(135deg, 
            rgba(240, 253, 255, 0.2) 0%, 
            rgba(224, 242, 254, 0.18) 25%,
            rgba(186, 230, 253, 0.2) 50%,
            rgba(224, 242, 254, 0.18) 75%,
            rgba(240, 253, 255, 0.2) 100%);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(125, 211, 252, 0.3);
        margin-bottom: 1.5rem;
        overflow: hidden;
    }

    .detail-card-body {
        padding: 1.5rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .info-item {
        padding: 1rem;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 0.5rem;
        border: 1px solid rgba(125, 211, 252, 0.2);
    }

    .info-label {
        font-weight: 600;
        color: #475569;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
    }

    .info-value {
        color: #1e293b;
        font-size: 1rem;
    }

    .table-container {
        background: linear-gradient(135deg, 
            rgba(240, 253, 255, 0.2) 0%, 
            rgba(224, 242, 254, 0.18) 25%,
            rgba(186, 230, 253, 0.2) 50%,
            rgba(224, 242, 254, 0.18) 75%,
            rgba(240, 253, 255, 0.2) 100%);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border: 1px solid rgba(125, 211, 252, 0.3);
    }

    .detail-table {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

    .detail-table thead {
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.8) 0%,
            rgba(37, 99, 235, 0.85) 25%,
            rgba(139, 92, 246, 0.9) 50%,
            rgba(168, 85, 247, 0.85) 75%,
            rgba(192, 132, 252, 0.8) 100%);
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .detail-table thead th {
        padding: 1rem;
        font-weight: 600;
        text-align: left;
        font-size: 0.875rem;
        border: none;
    }

    .detail-table tbody tr {
        border-bottom: 1px solid rgba(186, 230, 253, 0.25);
        transition: background 0.3s ease;
        background: rgba(255, 255, 255, 0.5);
    }

    .detail-table tbody tr:hover {
        background: linear-gradient(90deg, 
            rgba(147, 197, 253, 0.25) 0%,
            rgba(96, 165, 250, 0.22) 50%,
            rgba(147, 197, 253, 0.25) 100%);
    }

    .detail-table tbody td {
        padding: 1rem;
        color: #475569;
        font-size: 0.875rem;
        border: none;
    }

    @@media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
        }

        .detail-table {
            font-size: 0.8125rem;
        }

        .detail-table thead {
            display: none;
        }

        .detail-table tbody tr {
            display: block;
            margin-bottom: 1rem;
            border: 1px solid rgba(125, 211, 252, 0.3);
            border-radius: 0.5rem;
        }

        .detail-table tbody td {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem;
            border-bottom: 1px solid rgba(186, 230, 253, 0.2);
        }

        .detail-table tbody td:before {
            content: attr(data-label);
            font-weight: 600;
            color: #1e293b;
        }

        .detail-table tbody td:last-child {
            border-bottom: none;
        }
    }
</style>

<div class="detail-header">
    <h2>Chi tiết Import #@Model.StockInId</h2>
</div>

<div class="detail-card">
    <div class="detail-card-body">
        <div class="info-grid">
            <div class="info-item">
                <div class="info-label">Employee Name:</div>
                <div class="info-value">@Model.EmpUsername</div>
            </div>
            <div class="info-item">
                <div class="info-label">In Date:</div>
                <div class="info-value">@Model.OutDate</div>
            </div>
            <div class="info-item">
                <div class="info-label">Note:</div>
                <div class="info-value">@Model.Note</div>
            </div>
        </div>
    </div>
</div>

<div class="detail-header">
    <h2>Items</h2>
</div>

<div class="table-container">
    <table class="detail-table">
        <thead>
            <tr>
                <th>Part Name</th>
                <th>Manufacturer</th>
                <th>Serial</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td data-label="Part Name">@item.PartName</td>
                    <td data-label="Manufacturer">@item.Manufacturer</td>
                    <td data-label="Serial">@item.Serial</td>
                    <td data-label="Price">@item.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>
