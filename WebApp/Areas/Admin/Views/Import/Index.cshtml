@model WebApp.Models.Common.PaginatedList<WebApp.Models.Part.ImportViewModel>

@{
    ViewData["Title"] = "Danh sách Import";
}

<style>
    .import-header {
        background: linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(139,92,246,0.1) 100%);
        border-left: 4px solid #3b82f6;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .import-header h2 {
        margin: 0;
        color: #1e40af;
        font-weight: 600;
    }

    .btn-add-new {
        background: linear-gradient(135deg, 
            rgba(96, 165, 250, 0.6) 0%,
            rgba(59, 130, 246, 0.65) 25%,
            rgba(147, 51, 234, 0.7) 50%,
            rgba(168, 85, 247, 0.65) 75%,
            rgba(192, 132, 252, 0.6) 100%);
        border: 1px solid rgba(96, 165, 250, 0.4);
        color: white;
        padding: 0.625rem 1.5rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 6px rgba(96, 165, 250, 0.3);
    }

    .btn-add-new:hover {
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.8) 0%,
            rgba(37, 99, 235, 0.85) 25%,
            rgba(139, 92, 246, 0.9) 50%,
            rgba(168, 85, 247, 0.85) 75%,
            rgba(192, 132, 252, 0.8) 100%);
        color: white;
        box-shadow: 0 6px 12px rgba(96, 165, 250, 0.4);
    }

    .table-container {
        background: linear-gradient(135deg, 
            rgba(240, 253, 255, 0.2) 0%, 
            rgba(224, 242, 254, 0.18) 25%,
            rgba(186, 230, 253, 0.2) 50%,
            rgba(224, 242, 254, 0.18) 75%,
            rgba(240, 253, 255, 0.2) 100%);
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border: 1px solid rgba(125, 211, 252, 0.3);
    }

    .import-table {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

    .import-table thead {
        background: linear-gradient(135deg, 
            rgba(59, 130, 246, 0.8) 0%,
            rgba(37, 99, 235, 0.85) 25%,
            rgba(139, 92, 246, 0.9) 50%,
            rgba(168, 85, 247, 0.85) 75%,
            rgba(192, 132, 252, 0.8) 100%);
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.08);
    }

    .import-table thead th {
        padding: 1rem;
        font-weight: 600;
        text-align: left;
        font-size: 0.875rem;
        letter-spacing: 0.025em;
        border: none;
        white-space: nowrap;
    }

    .import-table tbody tr {
        border-bottom: 1px solid rgba(186, 230, 253, 0.25);
        transition: background 0.3s ease, box-shadow 0.3s ease;
        background: linear-gradient(90deg, 
            rgba(240, 253, 255, 0.1) 0%,
            rgba(224, 242, 254, 0.12) 50%,
            rgba(240, 253, 255, 0.1) 100%);
    }

    .import-table tbody tr:hover {
        background: linear-gradient(90deg, 
            rgba(147, 197, 253, 0.25) 0%,
            rgba(96, 165, 250, 0.22) 25%, 
            rgba(168, 85, 247, 0.2) 50%,
            rgba(96, 165, 250, 0.22) 75%,
            rgba(147, 197, 253, 0.25) 100%);
        box-shadow: 0 4px 12px rgba(96, 165, 250, 0.2);
    }

    .import-table tbody tr:last-child {
        border-bottom: none;
    }

    .import-table tbody td {
        padding: 1rem;
        color: #475569;
        font-size: 0.875rem;
        vertical-align: middle;
        border: none;
    }

    .import-table tbody td:first-child {
        font-weight: 600;
        color: #1e293b;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
        min-width: 85px;
        height: 38px;
    }

    .btn-info {
        background: linear-gradient(135deg, 
            rgba(14, 165, 233, 0.7) 0%,
            rgba(6, 182, 212, 0.75) 50%,
            rgba(8, 145, 178, 0.7) 100%);
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
        box-shadow: 0 4px 6px rgba(14, 165, 233, 0.25);
    }

    .btn-info:hover {
        background: linear-gradient(135deg, 
            rgba(14, 165, 233, 0.9) 0%,
            rgba(6, 182, 212, 0.95) 50%,
            rgba(8, 145, 178, 0.9) 100%);
        color: white;
        box-shadow: 0 6px 12px rgba(14, 165, 233, 0.4);
    }

    .btn-secondary {
        background: linear-gradient(135deg, 
            rgba(100, 116, 139, 0.7) 0%,
            rgba(71, 85, 105, 0.75) 50%,
            rgba(51, 65, 85, 0.7) 100%);
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
        box-shadow: 0 4px 6px rgba(100, 116, 139, 0.25);
    }

    .btn-secondary:hover {
        background: linear-gradient(135deg, 
            rgba(100, 116, 139, 0.9) 0%,
            rgba(71, 85, 105, 0.95) 50%,
            rgba(51, 65, 85, 0.9) 100%);
        color: white;
        box-shadow: 0 6px 12px rgba(100, 116, 139, 0.4);
    }

    .no-data {
        padding: 3rem;
        text-align: center;
        color: #94a3b8;
        font-size: 1rem;
    }

    /* Responsive Design */
    @@media (max-width: 991.98px) {
        .table-container {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .import-table {
            min-width: 800px;
        }
    }

    @@media (max-width: 767.98px) {
        .import-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .btn-add-new {
            width: 100%;
            text-align: center;
        }

        .import-header h2 {
            font-size: 1.5rem;
        }

        .import-table thead {
            display: none;
        }

        .import-table,
        .import-table tbody,
        .import-table tr,
        .import-table td {
            display: block;
            width: 100%;
        }

        .import-table {
            min-width: unset;
        }

        .import-table tbody tr {
            margin-bottom: 1rem;
            border: 1px solid rgba(125, 211, 252, 0.3);
            border-radius: 0.5rem;
            background: linear-gradient(135deg,
                rgba(240, 253, 255, 0.15) 0%,
                rgba(224, 242, 254, 0.2) 100%);
        }

        .import-table tbody td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid rgba(186, 230, 253, 0.2);
            position: relative;
            padding-left: 50%;
        }

        .import-table tbody td:last-child {
            border-bottom: none;
            padding-left: 1rem;
        }

        .import-table tbody td:before {
            content: attr(data-label);
            position: absolute;
            left: 1rem;
            font-weight: 600;
            color: #1e293b;
        }

        .import-table tbody td[data-label="Actions"]:before {
            display: none;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
        }
    }
</style>

<div class="import-header">
    <h2>@ViewData["Title"]</h2>
    <a class="btn-add-new" asp-area="Admin" asp-controller="Import" asp-action="Create">+ Thêm mới</a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="table-container">
    <table class="import-table">
        <thead>
            <tr>
                <th>StockIn ID</th>
                <th>Employee Username</th>
                <th>In Date</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Items != null && Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                <tr>
                    <td data-label="StockIn ID">@item.StockInId</td>
                    <td data-label="Employee Username">@item.EmpUsername</td>
                    <td data-label="In Date">@item.OutDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td data-label="Note">@item.Note</td>
                    <td data-label="Actions">
                        <div class="action-buttons">
                            <a class="btn-action btn-info"
                               asp-area="Admin"
                               asp-controller="Import"
                               asp-action="Details"
                               asp-route-id="@item.StockInId">Xem chi tiết</a>

                            <a class="btn-action btn-secondary"
                               asp-area="Admin"
                               asp-controller="Import"
                               asp-action="Invoice"
                               asp-route-id="@item.StockInId">
                                Tạo hóa đơn nhập (PDF)
                            </a>
                        </div>
                    </td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="no-data">Không có import nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Pagination Component *@
@if (Model != null && Model.TotalPages > 0)
{
    <partial name="_Pagination" model="Model" />
}

@section Scripts {
@if (TempData["ShouldDownloadPdf"] != null && TempData["ShouldDownloadPdf"].ToString() == "true")
{
    <script>
        var pdfBase64 = '@Html.Raw(TempData["PdfBase64"])';
        var fileName = '@Html.Raw(TempData["PdfFileName"])';
        
        if (pdfBase64 && fileName) {
            // Tạo blob từ base64
            var byteCharacters = atob(pdfBase64);
            var byteNumbers = new Array(byteCharacters.length);
            for (var i = 0; i < byteCharacters.length; i++) {
                byteNumbers[i] = byteCharacters.charCodeAt(i);
            }
            var byteArray = new Uint8Array(byteNumbers);
            var blob = new Blob([byteArray], { type: 'application/pdf' });
            
            // Tạo link download
            var url = window.URL.createObjectURL(blob);
            var a = document.createElement('a');
            a.href = url;
            a.download = fileName;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }
    </script>
}
}
 
