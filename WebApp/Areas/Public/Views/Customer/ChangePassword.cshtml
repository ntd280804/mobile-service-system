@model WebApp.Models.Auth.CustomerChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
    .change-password-page {
        padding: 2rem;
        background: linear-gradient(135deg, rgba(59,130,246,0.05) 0%, rgba(139,92,246,0.05) 100%);
        min-height: 100vh;
    }

    .change-password-card {
        background: linear-gradient(135deg, 
            rgba(255,255,255,0.95) 0%, 
            rgba(249,250,251,0.95) 50%, 
            rgba(255,255,255,0.95) 100%);
        border: 1px solid rgba(59,130,246,0.2);
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(59,130,246,0.08);
        overflow: hidden;
    }

    .change-password-header {
        background: linear-gradient(135deg, 
            rgba(59,130,246,0.8) 0%, 
            rgba(139,92,246,0.8) 100%);
        color: white;
        padding: 1.5rem;
        border: none;
    }

    .change-password-header h5 {
        margin: 0;
        font-weight: 600;
        font-size: 1.25rem;
    }

    .change-password-body {
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
        color: #4b5563;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border: 1px solid rgba(59,130,246,0.3);
        border-radius: 8px;
        transition: all 0.3s ease;
        padding: 0.75rem;
    }

    .form-control:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59,130,246,0.1);
        outline: none;
    }

    .btn-gradient {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(59,130,246,0.3);
    }

    .btn-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59,130,246,0.4);
        color: white;
    }

    .alert {
        border-radius: 8px;
        border: none;
    }

    .alert-success {
        background: linear-gradient(135deg, rgba(34,197,94,0.1) 0%, rgba(22,163,74,0.1) 100%);
        color: #059669;
        border-left: 4px solid #10b981;
    }

    .alert-danger {
        background: linear-gradient(135deg, rgba(239,68,68,0.1) 0%, rgba(220,38,38,0.1) 100%);
        color: #dc2626;
        border-left: 4px solid #ef4444;
    }

    @@media (max-width: 768px) {
        .change-password-page {
            padding: 1rem;
            min-height: calc(100vh - 60px);
        }
        .change-password-card {
            margin-bottom: 1rem;
        }
        .change-password-body {
            padding: 1.5rem;
        }
        .btn-gradient {
            width: 100%;
        }
    }
    
    @@media (max-width: 576px) {
        .change-password-page {
            padding: 0.5rem;
            min-height: calc(100vh - 50px);
        }
        .change-password-card {
            padding: 1rem;
        }
        .change-password-body {
            padding: 1rem;
        }
    }
</style>

<div class="change-password-page">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="change-password-card">
                <div class="change-password-header">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="change-password-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                        </div>
                    }

                    <form asp-area="Public" asp-controller="Customer" asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label">Mật khẩu hiện tại</label>
                            <input asp-for="OldPassword" type="password" class="form-control" autocomplete="current-password" placeholder="Nhập mật khẩu hiện tại" />
                            <span asp-validation-for="OldPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                            <input asp-for="NewPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Nhập mật khẩu mới" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Nhập lại mật khẩu mới" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-gradient w-100">
                            <i class="bi bi-shield-lock-fill me-2"></i>Đổi mật khẩu
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


